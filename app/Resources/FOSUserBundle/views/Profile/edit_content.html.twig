{% trans_default_domain 'FOSUserBundle' %}
<div class="container" style='margin-bottom: 5%; margin-top: 2%'>
    <div class="row">
        <h2>Editer mes informations</h2>
        <hr>
        <div class='col-lg-8'>
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                {{ form_widget(form) }}
                <div>
                    <input type="submit" class='btn btn-xl' value="{{ 'profile.edit.submit'|trans }}" />
                </div>
            {{ form_end(form) }}        
        </div>
    </div>
</div>
